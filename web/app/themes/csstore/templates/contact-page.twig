{% extends "base.twig" %}

{% block content %}
  <section class="container flex flex-col items-center gap-4 py-10 mx-auto">
    <h1 class="text-center">Contáctanos</h1>
    <form x-data="contactData" @submit.prevent="handleSubmit" x-ref="contactForm" method="POST" class="flex flex-col w-full max-w-lg gap-4">
      <div>
        <label for="name" class="block mb-1">Nombre</label>
        <input type="text" name="name" id="name" required />
      </div>
      <div>
        <label for="email" class="block mb-1">Email</label>
        <input type="email" name="email" id="email" required />
      </div>
      <div>
        <label for="message" class="block mb-1">Mensaje</label>
        <textarea name="message" id="message" rows="5" required></textarea>
      </div>
      <button class="text-white bg-primary button hover:bg-pink-500 focus-visible:bg-pink-500 focus-visible:outline-none" :disabled="loading">Enviar</button>
      <div class="h-9">
        <p x-show="success" class="flex items-center justify-center w-full h-full text-center text-white bg-success">Mensaje enviado correctamente</p>
        <p x-show="error" class="flex items-center justify-center w-full h-full text-center text-white bg-danger">Sucedió un error. Por favor, intentarlo más tarde</p>
      </div>
    </form>
  </section>
{% endblock %}